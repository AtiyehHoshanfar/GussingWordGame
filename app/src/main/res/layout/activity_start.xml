<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container_start_activity"
    android:layout_width="match_parent"
    android:layout_height="852dp"
    android:background="@drawable/container_start_activity"
    android:gravity="start|top"
    android:orientation="vertical">

    <TextView
        android:id="@+id/text_wordify"
        android:layout_width="wrap_content"
        android:layout_height="89dp"
        android:layout_marginHorizontal="43dp"
        android:layout_marginTop="148dp"
        android:layout_gravity="center_horizontal"
        android:includeFontPadding="false"
        android:maxLines="1"
        android:singleLine="true"
        android:text="Wordify"
        android:textColor="#FFFFFFFF"
        android:textSize="72sp" />

    <ImageView
        android:id="@+id/image_main_image"
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:scaleType="centerInside"
        android:src="@drawable/main" />

    <Button
        android:id="@+id/container_start_button"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="80dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/container_start_button"
        android:text="START"
        android:textSize="32sp"
        android:textColor="#FFFFFEE9"/>
</LinearLayout>
